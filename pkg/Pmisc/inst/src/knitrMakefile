ifndef pandocTo
pandocTo = latex
endif

REXE = R
PANDOC = pandoc
XELATEX = xelatex
RM = rm

DOCXTEMPLATE = $(REXE) --slave -e "cat(system.file('src','template.docx',package='Pmisc'))"

ODTTEMPLATE = $(REXE) --slave -e "cat(system.file('src','template.odt',package='Pmisc'))"

.PRECIOUS: %.md %.tex

#
# temporary files to remove
#
clean:
	$(RM) *.run.xml* *.blg *.out *.log *.aux *.nav *.toc *.vrb
	
#
# tmd file is markdown only to be converted to latex, 
# include
# if(any(commandArgs()=='mdToTex')) {
#   knitr::knit_hooks$set(plot=knitr::hook_plot_tex)  
#   mdToTex=TRUE
# } else {
#   knitr::knit_hooks$set(plot=Pmisc::hook_plot_htmlsubfig)
#   mdToTex=FALSE
# }
# specify files for tex from tmd directly 
# so as not to conflict with %.tex: %.md rule
#

somefile.tex: somefile.tmd
	$(PANDOC) --standalone --smart --biblatex $(pandocArgs) --from=markdown --to=$(pandocTo) --output=$@ $<

#
# Create tmd
#
%.tmd: %.Rmd
	$(REXE) -e "knitr::knit('$<', output = '$@', encoding='UTF-8')"  mdToTex $(Rargs)

#
# Bog standard markdown
#
%.md: %.Rmd
	$(REXE) -e "knitr::knit('$<', encoding='UTF-8')" $(Rargs)

#
# Bog standard markdown to tex
#
%.tex: %.md
	$(PANDOC) --standalone --smart --biblatex --filter=pandoc-crossref $(pandocArgs) --from=markdown --to=$(pandocTo) --output=$@ $<

#
# tex bibliography
#
%.bbl: %.bcf
	$(BIBER) $<	

%.bcf: %.tex
	$(XELATEX) -interaction=nonstopmode $<

#
# pdf from tex
# 
%.pdf: %.tex %.bbl
	$(XELATEX) -interaction=nonstopmode $<;
	$(XELATEX) -interaction=nonstopmode $<
#
# html from md
#
%.html: %.md
	$(PANDOC) --smart --standalone --mathjax --filter=pandoc-crossref --filter=pandoc-citeproc $(pandocArgs) --to=html5 --output=$@ $<

# 
# libreoffice document
#
%.odt: %.md
	$(PANDOC) --smart --standalone --filter=pandoc-crossref --filter=pandoc-citeproc $(pandocArgs) --reference-docx=$$($(ODTTEMPLATE)) --output=$@ $<

#
# MS Word document
#
%.docx: %.md
	$(PANDOC) --smart --standalone --filter=pandoc-crossref --filter=pandoc-citeproc $(pandocArgs) --reference-docx=$$($(DOCXTEMPLATE)) --output=$@ $<

# 
# rtf
# 
%.rtf: %.md
	$(PANDOC) --smart --standalone --filter=pandoc-crossref --filter=pandoc-citeproc $(pandocArgs) --output=$@ $<

